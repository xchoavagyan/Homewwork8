package com.company;

import java.util.ArrayList;
import java.util.Scanner;

public class Main {

    //4 Write a program to remove the third element from a array list.

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        ArrayList<String> colors = new ArrayList<>();
        colors.add("Yellow");
        colors.add("Black");
        colors.add("Blue");
        colors.add("Red");
        colors.add("Green");
        colors.remove(3);
    }
}